<nav class="navbar">
  <div class="nav_grid">
    <div class="logo">
      <a href="/">
        <img src="/logo_roed.webp" alt="pompette" />
      </a>
    </div>
    <ul class="menupunkter">
      <div class="dropdown">
        <li id="shop" class="menu-arrow">Shop â†“</li>
        <div class="sub-menu">
          <a class="nav-link" href="/listeview">Wine</a>
          <a class="nav-link" href="/notwine">Not Wine</a>
        </div>
      </div>
      <li><a class="nav-link" href="/thebar">The Winebar</a></li>
      <li><a class="nav-link" href="/aboutus">About Us</a></li>
      <li><img src="/cart-red.webp" alt="" /></li>
    </ul>
    <div class="hamburger">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
  <style>
    .navbar {
      padding: 1em;
    }
    .nav_grid {
      display: grid;
      grid-template-columns: 1fr 5fr;
    }
    .logo {
      flex-shrink: 0;
    }
    .logo img {
      max-width: 160px;
      height: auto;
    }
    .menupunkter {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      justify-content: space-around;
      list-style: none;
      font-family: century-gothic, sans-serif;
      margin: 2.5% 0% 0% 45%;
    }

    .menupunkter a {
      text-decoration: none;
      color: #ff0000;
      font-size: 14px;
    }
    .menupunkter img {
      flex-shrink: 0;
      max-width: 25px;
      height: auto;
    }
    .menupunkter li {
      color: #ff0000;
      font-size: 14px;
    }
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .sub-menu {
      display: none;
    }
    .sub-menu.open {
      display: flex;
      flex-direction: column;
    }
    .hamburger {
      display: none;
    }
    .bar {
      display: block;
      width: 35px;
      height: 2px;
      margin: 7px auto;
      -webkit-transition: all 0.3s ease-in-out;
      transition: all 0.3s ease-in-out;
      background-color: #ff0000;
    }
    @media only screen and (max-width: 700px) {
      .logo img {
        max-width: 120px;
        height: auto;
      }
      .hamburger {
        display: block;
        cursor: pointer;
      }
      .hamburger.active .bar:nt-child(2) {
        opacity: 0;
      }
      .hamburger.active .bar:nt-child(1) {
        transform: translateY(-8) rotate(-45deg);
      }
      .hamburger.active .bar:nt-child(3) {
        transform: translateY(8) rotate(45deg);
      }
    }
  </style>
  <script>
    const arrowButton = document.querySelectorAll(".menu-arrow");
    const subMenu = document.querySelector(".sub-menu");

    arrowButton.forEach((el) =>
      el.addEventListener("click", () => {
        subMenu.classList.toggle("open");
      })
    );
    const hamburger = document.querySelector(".hamburger");
    const navMenu = document.querySelector(".menupunkter");

    hamburger.addEventListener("click", mobileMenu);

    function mobileMenu() {
      hamburger.classList.toggle("active");
      navMenu.classList.toggle("active");
    }

    const navLink = document.querySelectorAll(".nav-link");

    navLink.forEach((n) => n.addEventListener("click", closeMenu));

    function closeMenu() {
      hamburger.classList.remove("active");
      navMenu.classList.remove("active");
    }
  </script>
</nav>
