} */

      /* ------ Styling mobilview ------- */

      @media only screen and (max-width: 700px) {
        .banner {
          background-color: #f3f3eb;
          padding: 5%;
          z-index: -1;
          padding-bottom: 30%;
        }

        .thebar {
          max-width: 90%;
          margin-left: 5%;
          z-index: 1;
          margin-top: -25%;
        }

        .winemenu {
          padding: 5%;
        }

        .center_grid {
          display: flex;
          justify-content: center;
          align-items: center;
        }

        .image_grid {
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 10px;
          max-width: 70%;
        }
        .grid_images {
          max-width: 100%;
        }

        .citation {
          padding-left: 5%;
        }
        .image-container {
          position: relative;
          width: 170px;
          height: 140px;
          margin: 5% 0% 10% 25%;
          cursor: pointer;
        }

        .image-container img {
          width: 100%;
          height: 100%;
          position: absolute;
        }

        .image-container img:hover {
          opacity: 0;
        }

        .image-container .hover-image {
          display: none;
          width: 100%;
          height: 100%;
          position: absolute;
          top: 0;
          left: 0;
        }

        .image-container:hover .hover-image {
          display: block;
        }
        .quote h2 {
          font-size: 20px;
        }
        .quote img {
          width: 20%;
        }
      }

      /* ------ Styling desktop ------- */

      @media only screen and (min-width: 700px) {
        .banner {
          padding: 5%;
          background-color: #f3f3eb;
          z-index: -1;
          margin-top: 3%;
        }
        .banner p {
          margin-right: 45%;
          margin-top: -1em;
        }

        .thebar {
          max-width: 38%;
          z-index: 1;
          position: absolute;
          margin-top: -27.5%;
          margin-left: 56%;
        }

        .col_1_1 {
          display: grid;
          grid-template-columns: 1fr 1fr;
          padding: 5%;
          margin-bottom: 5%;
          gap: 150px;
        }

        .quote {
          margin-top: 10%;
        }

        .center_grid {
          display: flex;
          justify-content: center;
          align-items: center;
        }

        .image_grid {
          display: grid;
          grid-template-columns: 1fr 1fr 1fr 1fr;
          gap: 30px;
          max-width: 70%;
          margin-bottom: 4%;
          margin-top: -5%;
        }

        .grid_images {
          max-width: 100%;
        }
        .image-container {
          position: relative;
          width: 170px;
          height: 140px;
          margin: 4% 0% 0% 0%;
          cursor: pointer;
        }

        .image-container img {
          width: 100%;
          height: 100%;
          position: absolute;
        }

        .image-container img:hover {
          opacity: 0;
        }

        .image-container .hover-image {
          display: none;
          width: 100%;
          height: 100%;
          position: absolute;
          top: 0;
          left: 0;
        }

        .image-container:hover .hover-image {
          display: block;
        }
      }

      /* ------ Generel styling, skrifttyper osv. ------- */

      h1 {
        font-family: athena, sans-serif;
        font-weight: 600;
        font-style: normal;
        font-size: 45px;
        margin-bottom: 3%;
        line-height: 1.5em;
      }

      h2 {
        font-family: athena, sans-serif;
        font-weight: 300;
        font-style: normal;
        font-size: 25px;
        line-height: 1.5em;
        color: #ff0000;
        padding-left: 5%;
        padding-right: 5%;
        padding-bottom: 5%;
      }

      p {
        font-family: century-gothic, sans-serif;
        font-weight: 400;
        font-style: normal;
        font-size: 14px;
        margin-bottom: 15px;
        line-height: 1.5em;
      }
    </style></body
  >
</html>
