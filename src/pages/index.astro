        background-color: #f4f2f2;
        border: black solid 1px;
        color: rgb(0, 0, 0);
        padding: 1em;
        margin: 0% 20% 0% 20%;
      }
      button {
        text-align: left;
        padding: 0.75em;
        border-radius: 0px;
        background-color: black;
        border: solid 1px black;
        color: white;
        cursor: pointer;
        margin-left: -36%;
        margin-right: 100%;
      }
      button:hover {
        background-color: #f4f2f2;
        color: #ff0000;
        border: solid 1px black;
      }
      .grid_1-5-1 {
        display: grid;
        grid-template-columns: 2fr 2fr 2fr 1fr;
        margin-left: 5%;
      }
      .brodtekst2 {
        margin: 5% 30% 5% 30%;

        line-height: 1.5em;
      }
      .rotate-image {
        transform-origin: center center;
        transition: transform 0.2s;
        margin: 4% 0% 4% 70%;
        width: 20%;
      }
      .rotate-image2 {
        transform-origin: center center;
        transition: transform 0.2s;
        margin: -5% 0% -7% 4%;
        width: 20%;
      }
    }
  </style>
  <script>
    window.addEventListener("scroll", function () {
      var rotation = window.pageYOffset / 3; // Adjust the divisor to control the rotation speed
      var image = document.getElementById("my-image");
      image.style.transform = "rotate(" + rotation + "deg)";
    });
    window.addEventListener("scroll", function () {
      var rotation = window.pageYOffset / 3; // Adjust the divisor to control the rotation speed
      var image = document.getElementById("my-image2");
      image.style.transform = "rotate(" + rotation + "deg)";
    });
