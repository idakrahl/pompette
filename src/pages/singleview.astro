  <style>
    body {
      font-family: Poppins;
    }

    h1 {
      color: red;
      font-size: 45px;
      line-height: 1.5em;
      margin-left: 2.5%;
      margin-bottom: -2%;
      margin-top: 0%;
      font-family: "athena", sans-serif;
    }
    #images {
      width: 70%;
      margin-left: 2%;
    }
    #images_lille {
      width: 100%;
    }
    .btn {
      display: inline-block;
      background: red;
      color: white;
      padding: 8px 30px;
      margin: 30px 0;
      border-radius: 30px;
      transition: background 0.5s;
    }
    .btn:hover {
      background: black;
    }

    .grid2 {
      display: grid;
      grid-template-columns: 1fr 3fr 3fr;
      gap: 20px;
      padding: 50px;
      font-size: 14px;
      line-height: 1.5em;
      font-family: century-gothic, sans-serif;
      margin-left: -1.5%;
    }
    .grid2 img {
      width: 100%;
    }
    .price {
      font-family: "athena", sans-serif;
      color: red;
      font-size: 25px;
    }
    .product {
      margin-left: 35px;
      font-size: 14px;
      text-decoration: none;
      color: rgba(0, 0, 0, 0.526);
      font-family: century-gothic, sans-serif;
    }
    .product:hover {
      color: red;
    }
    .description {
      margin-top: 10px;
    }
    .image-container {
      position: relative;
      width: 170px;
      height: 140px;
      margin: 4% 0% 0% 0%;
      cursor: pointer;
    }
    .purchaseBox {
      margin-left: -20%;
      margin-top: -4%;
    }
    .image-container img {
      width: 100%;
      height: 100%;
      position: absolute;
    }

    .image-container img:hover {
      opacity: 0;
    }

    .image-container .hover-image {
      display: none;
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }

    .image-container:hover .hover-image {
      display: block;
    }

    /* Media Queries */

    @media only screen and (max-width: 700px) {
      h1 {
        margin-left: 2%;
        margin-bottom: -7%;
      }
      .product {
        margin-left: 10px;
      }
      .grid2 {
        display: grid;
        grid-template-columns: 1fr 2fr;
        margin-left: -10%;
      }
      #images {
        width: 140%;
        margin-left: -25%;
      }
      #images_lille {
        width: 70%;
      }
      .purchaseBox {
        margin-left: 2%;
      }
      .description {
        margin-right: -200px;
      }
      .image-container {
        width: 140px;
        height: 110px;
      }
    }
  </style>


</html>
